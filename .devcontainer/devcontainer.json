{
  "name": "TSI Dev Container",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.devcontainer.yml"
  ],
  "service": "app",
  "runServices": [
    "postgres"
  ],
  "remoteUser": "app",
  "updateRemoteUserUID": false,
  "workspaceFolder": "/workspace",
  "shutdownAction": "stopCompose",
  "forwardPorts": [
    8501,
    5432
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "tests"
        ]
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-pyright.pyright",
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml"
      ]
    }
  },
  "postCreateCommand": "pip install -r requirements.base.txt && maturin develop --release --manifest-path backend/Cargo.toml --features postgres-repo",
  "containerEnv": {
    "STREAMLIT_SERVER_ADDRESS": "0.0.0.0",
    "STREAMLIT_SERVER_PORT": "8501",
    "PYTHONPATH": "/workspace/src"
  }
}
